{
    "name": "theodoreb/php-npm",
    "description": "A PHP-based npm client for managing frontend assets without requiring Node.js",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "npm",
        "package-manager",
        "node-modules",
        "frontend",
        "dependencies",
        "drupal"
    ],
    "homepage": "https://github.com/theodoreb/php-npm",
    "authors": [
        {
            "name": "Th√©odore BIADALA",
            "homepage": "https://github.com/theodoreb"
        }
    ],
    "support": {
        "issues": "https://github.com/theodoreb/php-npm/issues",
        "source": "https://github.com/theodoreb/php-npm"
    },
    "autoload": {
        "psr-4": {
            "PhpNpm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpNpm\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "composer/semver": "^3.0",
        "symfony/console": "^6.0 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "captainhook/captainhook": "^5.0",
        "captainhook/plugin-composer": "^5.0"
    },
    "bin": [
        "bin/php-npm"
    ],
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "captainhook/plugin-composer": true
        }
    }
}
